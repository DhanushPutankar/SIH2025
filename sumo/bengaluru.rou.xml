<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">
    <!-- Vehicle types -->
    <vType id="normal_car" accel="2.6" decel="4.5" sigma="0.5" length="4.5" maxSpeed="35"/>
    <vType id="ambulance" accel="3.0" decel="5.0" sigma="0.3" length="6.0" maxSpeed="50" color="1,1,1"/>
    
    <!-- Routes -->
    <route id="route1" edges="J1J2 J2J3"/>
    <route id="route2" edges="J1J4 J4J5 J5J6"/>
    <route id="hospital_route" edges="H1J1 J1J2 J2J5 J5J6 J6H2"/>
    
    <!-- Traffic flows -->
    <flow id="normal_traffic1" route="route1" begin="0" end="3600" vehsPerHour="200" type="normal_car"/>
    <flow id="normal_traffic2" route="route2" begin="0" end="3600" vehsPerHour="150" type="normal_car"/>
    
    <!-- Emergency vehicle (can be triggered) -->
    <vehicle id="ambulance_001" type="ambulance" route="hospital_route" depart="0" color="1,0,0"/>
</routes>